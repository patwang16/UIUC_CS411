   <div class="home">
         <form action="/home" method="POST">
           <button class="btn"><i class="fa fa-home"></i> Home</button>
         </form>
   </div>
 <body>
 <div class="container mt-4">
     <div class="card">
       <div class="card-body">
         <h2>Find Suburbs With a Lot of a Certain Breed</h2>
         <form action="adv1" method="POST">
           <div class="form-group">
             <label for="adv1breed">Breed</label>
             <input type="text" class="form-control col-lg-9" id="adv1breed" aria-describedby="emailHelp" placeholder="Enter Breed" name="adv1breed">
           </div>
           <button type="submit" class="btn btn-primary">Search</button>
         </form>
            <table>
             <tr>
             <th> Suburb </th>
             <th> Dog Count </th>
             </tr>
          <% for(let i=0; i<adv_q1.length; i++) {%>
             <tr>
             <td><%= adv_q1[i].Suburb %></td>
             <td><%= adv_q1[i].DogCount %></td>
             </tr>
             <% } %>
            </table>
   </div>
 </div>
 </div>
